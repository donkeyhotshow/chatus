type ViewMode = 'desktop' | 'mobile';
type Screen = 'profile' | 'chat';

// Mock pixel editor component
function PixelEditor({ isMobile = false }: { isMobile?: boolean }) {
    const [selectedColor, setSelectedColor] = useState('#22d3ee');
    const [pixels, setPixels] = useState<string[][]>(
        Array(isMobile ? 12 : 16).fill(null).map(() =>
            Array(isMobile ? 12 : 16).fill('#1e293b')
        )
    );

    const colors = [
        '#22d3ee', '#3b82f6', '#8b5cf6', '#ef4444',
        '#10b981', '#f59e0b', '#ec4899', '#6b7280'
    ];

    const pixelSize = isMobile ? 'w-6 h-6' : 'w-4 h-4';

    return (
        <div className="space-y-4">
            {/* Pixel grid */}
            <div className={`grid gap-1 mx-auto ${isMobile ? 'grid-cols-12 max-w-80' : 'grid-cols-16 max-w-96'}`}>
                {pixels.map((row, y) =>
                    row.map((color, x) => (
                        <button
                            key={`${x}-${y}`}
                            className={`${pixelSize} border border-slate-600 hover:border-cyan-400 transition-colors`}
                            style={{ backgroundColor: color }}
                            onClick={() => {
                                const newPixels = [...pixels];
                                newPixels[y][x] = selectedColor;
                                setPixels(newPixels);
                            }}
                        />
                    ))
                )}
            </div>

            {/* Color palette */}
            <div className={`flex ${isMobile ? 'justify-center gap-2' : 'justify-center gap-3'}`}>
                {colors.map((color) => (
                    <button
                        key={color}
                        onClick={() => setSelectedColor(color)}
                        className={`${isMobile ? 'w-8 h-8' : 'w-6 h-6'} rounded-lg transition-all ${selectedColor === color
                            ? 'ring-2 ring-cyan-400 ring-offset-2 ring-offset-slate-900 scale-110'
                            : 'hover:scale-105'
                            }`}
                        style={{ backgroundColor: color }}
                    />
                ))}
            </div>

            {/* Tools */}
            <div className={`flex ${isMobile ? 'justify-center gap-2' : 'justify-center gap-3'}`}>
                <Button variant="outline" size={isMobile ? 'md' : 'sm'}>
                    <Pencil className="w-4 h-4" />
                    {!isMobile && <span className="ml-2">Карандаш</span>}
                </Button>
                <Button variant="outline" size={isMobile ? 'md' : 'sm'}>
                    <Eraser className="w-4 h-4" />
                    {!isMobile && <span className="ml-2">Ластик</span>}
                </Button>
                <Button variant="outline" size={isMobile ? 'md' : 'sm'}>
                    <Shuffle className="w-4 h-4" />
                    {!isMobile && <span className="ml-2">Случайный</span>}
                </Button>
            </div>
        </div>
    );
}

// Profile creation screen
function ProfileScreen({ isMobile = false }: { isMobile?: boolean }) {
    const [username, setUsername] = useState('');

    const usernameRules = [
        { test: (v: string) => v.length >= 3, message: "Минимум 3 символа" },
        { test: (v: string) => v.length <= 20, message: "Максимум 20 символов" },
        { test: (v: string) => /^[a-zA-Z0-9_]+$/.test(v), message: "Только буквы, цифры и _" }
    ];

    if (isMobile) {
        return (
            <div className="min-h-screen bg-gradient-to-br from-slate-950 to-slate-900 text-white">
                {/* Header */}
                <div className="text-center py-8 px-4 border-b border-slate-700/50">
                    <h1 className="text-3xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                        ЧАТ ДЛЯ НАС
                    </h1>
                    <h2 className="text-xl font-semibold mt-2 text-white">Создайте профиль</h2>
                    <p className="text-slate-400 mt-2">Нарисуйте пиксельный аватар и выберите имя</p>
                </div>

                {/* Content */}
                <div className="p-6 space-y-8">
                    <PixelEditor isMobile={true} />

                    <ValidatedInput
                        label="Введите ваше имя"
                        value={username}
                        onChange={setUsername}
                        validationRules={usernameRules}
                        placeholder="Ваше имя"
                    />
                </div>

                {/* Fixed bottom button */}
                <div className="fixed bottom-0 left-0 right-0 p-6 bg-slate-900/80 backdrop-blur-xl border-t border-slate-700/50">
                    <Button
                        className="w-full"
                        size="lg"
                        disabled={username.length < 3}
                    >
                        ВОЙТИ В ЧАТ
                    </Button>
                </div>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-950 to-slate-900 text-white flex items-center justify-center p-8">
            <div className="max-w-2xl w-full">
                {/* Header */}
                <div className="text-center mb-12">
                    <h1 className="text-5xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-4">
                        ЧАТ ДЛЯ НАС
                    </h1>
                    <h2 className="text-2xl font-semibold text-white mb-2">Создайте профиль</h2>
                    <p className="text-slate-400">
                        Нарисуйте пиксельный аватар и выберите имя<br />
                        для входа в комнату 2.
                    </p>
                </div>

                {/* Avatar editor */}
                <div className="bg-slate-900/50 backdrop-blur-xl rounded-2xl p-8 border border-slate-700/50 mb-8">
                    <PixelEditor />
                </div>

                {/* Username input */}
                <div className="bg-slate-900/50 backdrop-blur-xl rounded-2xl p-6 border border-slate-700/50 mb-8">
                    <ValidatedInput
                        label="Введите ваше имя"
                        value={username}
                        onChange={setUsername}
                        validationRules={usernameRules}
                        placeholder="Ваше имя"
                    />
                </div>

                {/* Actions */}
                <div className="flex items-center justify-between">
                    <Button variant="ghost">
                        <Info className="w-4 h-4 mr-2" />
                        Информация
                    </Button>
                    <Button
                        size="lg"
                        disabled={username.length < 3}
                    >
                        ВОЙТИ В ЧАТ
                    </Button>
                </div>
            </div>
        </div>
    );
}

// Chat message component
function ChatMessage({
    avatar,
    username,
    message,
    time,
    isOwn = false
}: {
    avatar: string;
    username: string;
    message: string;
    time: string;
    isOwn?: boolean;
}) {
    return (
        <div className={`flex gap-3 mb-4 ${isOwn ? 'flex-row-reverse' : ''}`}>
            <div className="w-10 h-10 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-xl flex items-center justify-center text-black font-bold">
                {avatar}
            </div>
            <div className={`flex-1 ${isOwn ? 'text-right' : ''}`}>
                <div className="flex items-center gap-2 mb-1">
                    <span className="font-semibold text-white">{username}</span>
                    <span className="text-xs text-slate-400">{time}</span>
                </div>
                <div className={`inline-block px-4 py-2 rounded-2xl max-w-xs ${isOwn
                    ? 'bg-gradient-to-r from-cyan-500 to-blue-500 text-black'
                    : 'bg-slate-800 text-white'
                    }`}>
                    {message}
                </div>
            </div>
        </div>
    );
}

// Chat screen
function ChatScreen({ isMobile = false }: { isMobile?: boolean }) {
    const [message, setMessage] = useState('');

    const messages = [
        { avatar: 'U1', username: 'User1', message: 'Привет, как дела?', time: '12:30', isOwn: false },
        { avatar: 'Вы', username: 'Вы', message: 'Привет! Отлично!', time: '12:32', isOwn: true },
        { avatar: 'U2', username: 'User2', message: 'Как настроение?', time: '12:33', isOwn: false },
    ];

    const participants = [
        { avatar: 'U1', username: 'User1', online: true },
        { avatar: 'U2', username: 'User2', online: true },
        { avatar: 'U3', username: 'User3', online: false },
        { avatar: 'Вы', username: 'Вы', online: true },
    ];

    if (isMobile) {
        return (
            <div className="min-h-screen bg-gradient-to-br from-slate-950 to-slate-900 text-white flex flex-col">
                {/* Header */}
                <div className="flex items-center justify-between p-4 border-b border-slate-700/50 bg-slate-900/50 backdrop-blur-xl">
                    <div className="flex items-center gap-3">
                        <Button variant="ghost" size="sm">
                            <ArrowLeft className="w-4 h-4" />
                        </Button>
                        <span className="font-semibold">Комната 2</span>
                    </div>
                    <Button variant="ghost" size="sm">
                        <Menu className="w-4 h-4" />
                    </Button>
                </div>

                {/* Messages */}
                <div className="flex-1 p-4 overflow-y-auto">
                    {messages.map((msg, index) => (
                        <ChatMessage key={index} {...msg} />
                    ))}
                </div>

                {/* Input */}
                <div className="p-4 border-t border-slate-700/50 bg-slate-900/50 backdrop-blur-xl">
                    <div className="flex gap-3">
                        <input
                            value={message}
                            onChange={(e) => setMessage(e.target.value)}
                            placeholder="Введите сообщение..."
                            className="flex-1 px-4 py-3 bg-slate-800 border border-slate-600 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:border-cyan-500"
                        />
                        <Button size="md">
                            <Send className="w-4 h-4" />
                        </Button>
                    </div>
                </div>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-950 to-slate-900 text-white">
            {/* Header */}
            <div className="p-4 border-b border-slate-700/50 bg-slate-900/50 backdrop-blur-xl">
                <h1 className="text-xl font-bold">ЧАТ ДЛЯ НАС | Комната 2</h1>
            </div>

            <div className="flex h-[calc(100vh-80px)]">
                {/* Participants sidebar */}
                <div className="w-64 border-r border-slate-700/50 bg-slate-900/30 p-4">
                    <h3 className="font-semibold text-cyan-400 mb-4 flex items-center gap-2">
                        <Users className="w-4 h-4" />
                        Участники
                    </h3>
                    <div className="space-y-2">
                        {participants.map((participant, index) => (
                            <div key={index} className="flex items-center gap-3 p-2 rounded-lg hover:bg-slate-800/50">
                                <div className="relative">
                                    <div className="w-8 h-8 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-lg flex items-center justify-center text-black font-bold text-sm">
                                        {participant.avatar}
                                    </div>
                                    {participant.online && (
                                        <div className="absolute -bottom-1 -right-1 w-3 h-3 bg-green-400 rounded-full border-2 border-slate-900" />
                                    )}
                                </div>
                                <span className="text-sm text-white">{participant.username}</span>
                            </div>
                        )
                 </div>
                </div>

                {/* Main chat area */}
                <div className="flex-1 flex flex-col">
                    {/* Messages */}
                    <div className="flex-1 p-6 overflow-y-auto">
                        {messages.map((msg, index) => (
                            <ChatMessage key={index} {...msg} />
                        ))}
                    </div>

                    {/* Input */}
                    <div className="p-6 border-t border-slate-700/50 bg-slate-900/30">
                        <div className="flex gap-3">
                            <input
                                value={message}
                                onChange={(e) => setMessage(e.target.value)}
                                placeholder="Введите сообщение..."
                                className="flex-1 px-4 py-3 bg-slate-800 border border-slate-600 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:border-cyan-500"
                            />
                            <Button>
                                Отправить
                            </Button>
                        </div>
                    </div>
                </div>

                {/* Message history sidebar */}
                <div className="w-64 border-l border-slate-700/50 bg-slate-900/30 p-4">
                    <h3 className="font-semibold text-cyan-400 mb-4 flex items-center gap-2">
                        <MessageCircle className="w-4 h-4" />
                        История
                    </h3>
                    <div className="space-y-2">
                        {messages.map((msg, index) => (
                            <div key={index} className="p-2 rounded-lg hover:bg-slate-800/50">
                                <div className="text-xs text-slate-400">{msg.time}</div>
                                <div className="text-sm text-white truncate">{msg.username}: {msg.message}</div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    );
}

export function WireframeShowcase() {
    const [viewMode, setViewMode] = useState<ViewMode>('desktop');
    const [currentScreen, setCurrentScreen] = useState<Screen>('profile');

    return (
        <ToastProvider>
            <div className="min-h-screen bg-gradient-to-br from-slate-950 to-slate-900">
                {/* Controls */}
                <div className="fixed top-4 left-4 z-50 flex gap-2">
                    <div className="bg-slate-900/80 backdrop-blur-xl rounded-xl p-2 border border-slate-700/50">
                        <div className="flex gap-1">
                            <Button
                                variant={viewMode === 'desktop' ? 'primary' : 'ghost'}
                                size="sm"
                                onClick={() => setViewMode('desktop')}
                            >
                                <Monitor className="w-4 h-4" />
                            </Button>
                            <Button
                                variant={viewMode === 'mobile' ? 'primary' : 'ghost'}
                                size="sm"
                                onClick={() => setViewMode('mobile')}
                            >
                                <Smartphone className="w-4 h-4" />
                            </Button>
                        </div>
                    </div>

                    <div className="bg-slate-900/80 backdrop-blur-xl rounded-xl p-2 border border-slate-700/50">
                        <div className="flex gap-1">
                            <Button
                                variant={currentScreen === 'profile' ? 'primary' : 'ghost'}
                                size="sm"
                                onClick={() => setCurrentScreen('profile')}
                            >
                                <User className="w-4 h-4" />
                            </Button>
                            <Button
                                variant={currentScreen === 'chat' ? 'primary' : 'ghost'}
                                size="sm"
                                onClick={() => setCurrentScreen('chat')}
                            >
                                <MessageCircle className="w-4 h-4" />
                            </Button>
                        </div>
                    </div>
                </div>

                {/* Screen preview */}
                <div className={`${viewMode === 'mobile' ? 'flex items-center justify-center p-8' : ''}`}>
                    <div className={`${viewMode === 'mobile'
                        ? 'w-[375px] h-[812px] bg-black rounded-[2.5rem] p-2 shadow-2xl'
                        : 'w-full h-screen'
                        }`}>
                        <div className={`${viewMode === 'mobile'
                            ? 'w-full h-full bg-slate-900 rounded-[2rem] overflow-hidden'
                            : 'w-full h-full'
                            }`}>
                            <AnimatePresence mode="wait">
                                <motion.div
                                    key={`${currentScreen}-${viewMode}`}
                                    initial={{ opacity: 0, scale: 0.95 }}
                                    animate={{ opacity: 1, scale: 1 }}
                                    exit={{ opacity: 0, scale: 1.05 }}
                                    transition={{ duration: 0.3 }}
                                    className="w-full h-full"
                                >
                                    {currentScreen === 'profile' ? (
                                        <ProfileScreen isMobile={viewMode === 'mobile'} />
                                    ) : (
                                        <ChatScreen isMobile={viewMode === 'mobile'} />
                                    )}
                                </motion.div>
                            </AnimatePresence>
                        </div>
                    </div>
                </div>

                {/* Info panel */}
                <div className="fixed bottom-4 right-4 max-w-md bg-slate-900/80 backdrop-blur-xl rounded-xl p-4 border border-slate-700/50 text-white">
                    <h3 className="font-semibold text-cyan-400 mb-2">
                        {currentScreen === 'profile' ? 'Экран создания профиля' : 'Основной чат'}
                        ({viewMode === 'desktop' ? 'Десктоп' : 'Мобильная'} версия)
                    </h3>
                    <p className="text-sm text-slate-300">
                        {currentScreen === 'profile'
                            ? 'Минималистичный экран для создания аватара и ввода имени с валидацией в реальном времени.'
                            : viewMode === 'desktop'
                                ? 'Трехколоночный макет: участники, чат, история сообщений.'
                                : 'Одноколоночный макет с фиксированным полем ввода и скрытыми панелями.'
                        }
                    </p>
                </div>
            </div>
        </ToastProvider>
    );
}
