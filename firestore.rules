rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat rooms - users can read/write if authenticated
    match /rooms/{roomId} {
      allow read, write: if request.auth != null;

      // Messages - users can read all messages, create their own, update/delete their own
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          request.auth.uid == request.resource.data.senderId;
        allow update: if request.auth != null && (
          // Allow sender to update their own messages
          request.auth.uid == resource.data.senderId ||
          // Allow updating seen/delivered status by any authenticated user
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seen', 'delivered', 'reactions'])
        );
        allow delete: if request.auth != null &&
          request.auth.uid == resource.data.senderId;
      }

      // Canvas drawings - similar to messages
      match /drawings/{drawingId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null &&
          request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null &&
          request.auth.uid == resource.data.userId;
      }

      // Game states - participants can read/write
      match /games/{gameId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
      }
    }

    // Deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
